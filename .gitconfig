[user]
    name = Yi-Hung Wei
    email = yihung.wei@gmail.com

[core]
    editor = vim
    abbrev = 12

[alias]
    bh = branch
    bhd = branch -D
    cp = cherry-pick
    co = checkout
    fromkern = am -p3 --directory=datapath/ --reject
    logp = log --pretty='%C(auto) %ad %h %s' --date=short
    lg = log --pretty='%C(auto) %ad %h %s' --date=short
    logr = log --pretty='%C(auto) %ad %h %s' --date=short --reverse
    lr = log --pretty='%C(auto) %ad %h %s' --date=short --reverse
    rst = reset --hard HEAD
    st = stash
    tc = tag --contains

[sendemail]
    from = Yi-Hung Wei <yihung.wei@gmail.com>
    smtpserver = smtp.gmail.com
    smtpuser = yihung.wei@gmail.com
    smtpencryption = tls
    smtpserverport = 587
    supprescc = self
